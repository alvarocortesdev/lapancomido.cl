// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/client"
  previewFeatures = []
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["pancomido"]
}

// ============================================
// Core Domain Models
// ============================================

model products {
  id          Int       @id @default(autoincrement())
  product     String
  ingredients String?
  price       Decimal   @db.Decimal(10, 2)
  weight      String?
  description String?
  nutrition   String?
  available   Boolean   @default(false)
  unit_type   String    @default("unit")  // "unit" or "pack"
  pack_size   Int?                          // Only for packs, e.g., 6 means "6 un c/p"
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now()) @updatedAt

  // Relations
  stock              stock[]
  images             product_img[]
  categories_products categories_products[]

  @@schema("pancomido")
}

model product_img {
  id         Int      @id @default(autoincrement())
  id_product Int
  url_img    String
  created_at DateTime @default(now())

  // Relations
  product products @relation(fields: [id_product], references: [id], onDelete: Cascade)

  @@schema("pancomido")
}

model categories {
  id         Int      @id @default(autoincrement())
  category   String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  // Relations
  categories_products categories_products[]

  @@schema("pancomido")
}

model categories_products {
  id          Int @id @default(autoincrement())
  id_category Int
  id_product  Int

  // Relations
  category categories @relation(fields: [id_category], references: [id], onDelete: Cascade)
  product  products   @relation(fields: [id_product], references: [id], onDelete: Cascade)

  @@unique([id_category, id_product])
  @@schema("pancomido")
}

model stock {
  id         Int      @id @default(autoincrement())
  id_product Int
  stock      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  // Relations
  product products @relation(fields: [id_product], references: [id], onDelete: Cascade)

  @@schema("pancomido")
}

// ============================================
// Store Configuration & Quotation Models
// ============================================

model store_config {
  id              Int      @id @default(autoincrement())
  whatsapp_number String   // E.164 format without +, e.g., "56912345678"
  greeting        String   @default("Hola! Hay pan? <3")
  show_prices     Boolean  @default(true)
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now()) @updatedAt

  @@schema("pancomido")
}

model quotation_leads {
  id         Int      @id @default(autoincrement())
  email      String?
  phone      String   // E.164 format
  name       String
  created_at DateTime @default(now())

  @@schema("pancomido")
}
